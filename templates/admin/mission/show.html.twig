{% extends 'admin/base.html.twig' %}

{% block title %}Détails de la mission
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-header">
            <h3>Détails de la mission</h3>
        </div>
		<div class="card-body">
			<table class="table">
				<tbody>
					<tr>
						<th>Nom</th>
						<td>{{ mission.nom }}</td>
					</tr>
					<tr>
						<th>Description</th>
						<td>{{ mission.description }}</td>
					</tr>
					<tr>
						<th>Date de fin</th>
						<td>{{ mission.dateFin ? mission.dateFin|date('Y-m-d') : '' }}</td>
					</tr>
					<tr>
						<th>Difficulté</th>
						<td>{{ mission.difficulte  }}</td>
					</tr>
					<tr>
						<th>Etat</th>
						<td>{{ mission.etat == 0 ? "Disponible" : mission.etat == 1 ? "En cours" : mission.etat == 2 ? "Terminée" }}</td>
					</tr>
				</tbody>
			</table>
		</div>
        <div class="card-footer d-flex flex-wrap">
            <a href="{{ path('mission_index') }}" class="btn btn-primary" ><i class="fas fa-arrow-left"></i></a>

	<a href="{{ path('mission_edit', {'id': mission.id}) }}" class="btn btn-warning text-light ml-0 ml-md-1"><i class="fas fa-edit"></i></a>

	{{ include('admin/mission/_delete_form.html.twig') }}
        </div>
	</div>

	
{% endblock %}
